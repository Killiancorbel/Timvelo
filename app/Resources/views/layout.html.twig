{# app/Resources/views/layout.html.twig #}

<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <title>{% block title %}Timvélo{% endblock %}</title>

  {% block stylesheets %}
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Roboto">
    <link rel="stylesheet" href="{{ asset('css/home.css') }}" />
  {% endblock %}
</head>

<body>
  <div class="container-fullwidth">
    <div id="header" class="jumbotron" style="background-color: #006064; font-family: 'Roboto', serif;">
      <h1>Timvélo</h1>
    </div>

    <div class="row">

      <div class="col-md-7">

      <div style="background-color: #EEEEEE; font-family: 'Roboto', serif;">
        <ul>
          <li>
            <a href="#" style="padding: 5px 30px 5px 10px; display: block;">Accueil</a>
          </li>
          <li>
            <a href="#" style="padding: 5px 30px 5px 10px; display: block;">Calendrier</a>
          </li>
          <li>
            <a href="#" style="padding: 5px 30px 5px 10px; display: block;">Pronostiques</a>
          </li>
          <li>
            <a href="#" style="padding: 5px 30px 5px 10px; display: block;">Mon compte</a>
          </li>
          <li>
            <a href="#" style="padding: 5px 30px 5px 10px; display: block;">Classements</a>
          </li>
        </ul>
      </div>

      <div>
        {% block body_left %}
        {% endblock %}
      </div>

      </div>

      <div class="col-md-5" style="background-color: #EEEEEE;">
        {% block body_right %}
        {% endblock %}
      </div>

    </div>

  </div>



    

  {% block javascripts %}
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
  {% endblock %}

</body>
</html>