{# app/Resources/views/layout.html.twig #}

<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <title>{% block title %}Timvélo{% endblock %}</title>

  {% block stylesheets %}
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Roboto">
    <link rel="stylesheet" href="{{ asset('css/home.css') }}" />
  {% endblock %}
</head>

<body>
  <div class="container-fullwidth">
    <div id="header" class="jumbotron" style="background-color: #006064; font-family: 'Roboto', serif;">
      <h1>Timvélo</h1>
    </div>

    <div class="row">

      <div class="col-md-7">

      <nav class="navbar navbar-default" style="margin-top: -30px;">
        <div class="container-fluid">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand active" href="#">Accueil <span class="sr-only">(current)</span></a>
          </div>
          
          <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav">
              <li><a href="#">Calendrier</a></li>
              <li><a href="#">Pronostiques</a></li>
              <li><a href="#">Mon compte</a></li>
              <li><a href="#">Classements</a></li>
            </ul>
        </div>
      </nav>

      <div>
        {% block body_left %}
        {% endblock %}
      </div>

      </div>

      <div class="col-md-5" style="background-color: #EEEEEE; height: 75vh; margin-top: -30px; margin-left: -20px;">
        {% block body_right %}
        {% endblock %}
      </div>

    </div>

  </div>



    

  {% block javascripts %}
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
  {% endblock %}

</body>
</html>